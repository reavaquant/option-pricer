# Conçu pour du C++20 orienté perf/robustesse, avec un bruit raisonnable.
Checks: >
  clang-analyzer-*,
  bugprone-*,
  performance-*,
  modernize-*,
  readability-*,
  portability-*,
  misc-*,
  cppcoreguidelines-*,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-pro-bounds-array-to-pointer-decay,
  -cppcoreguidelines-owning-memory,
  -cppcoreguidelines-avoid-non-const-global-variables,
  -misc-non-private-member-variables-in-classes,
  -readability-implicit-bool-conversion

WarningsAsErrors: >
  clang-analyzer-*,
  bugprone-*,
  performance-*

HeaderFilterRegex: '^(include|src)/'
AnalyzeTemporaryDtors: false
FormatStyle: file
InheritParentConfig: false
User: dev

# Passe le standard au front-end Clang utilisé par clang-tidy
ExtraArgs: ['-std=c++20']

# Quelques réglages utiles
CheckOptions:
  - { key: modernize-use-nodiscard.StrictMode, value: 1 }
  - { key: modernize-use-override.StrictMode, value: 1 }
  - { key: readability-identifier-naming.NamespaceCase, value: lower_case }
  - { key: readability-identifier-naming.ClassCase, value: CamelCase }
  - { key: readability-identifier-naming.FunctionCase, value: camelBack }
  - { key: readability-identifier-naming.MemberCase, value: camelBack }
  - { key: readability-identifier-naming.PrivateMemberSuffix, value: _ }
  - { key: readability-implicit-bool-conversion.AllowIntegerConditions, value: 0 }